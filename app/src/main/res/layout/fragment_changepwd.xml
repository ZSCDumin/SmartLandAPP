<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        >
        <TextView
            android:id="@+id/nowPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前密码："
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline1"
            app:layout_constraintBottom_toBottomOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="@+id/guideline6"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintHorizontal_bias="0.11"
            />

        <EditText
            android:id="@+id/input_nowPwd"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline1"
            app:layout_constraintBottom_toBottomOf="@+id/guideline2"
            app:layout_constraintLeft_toRightOf="@+id/nowPwd" />
        <TextView
            android:id="@+id/newPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码："
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintBottom_toBottomOf="@+id/guideline3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            />

        <EditText
            android:id="@+id/input_newPwd"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintBottom_toBottomOf="@+id/guideline3"
            app:layout_constraintLeft_toRightOf="@+id/newPwd" />

        <TextView
            android:id="@+id/checkPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码："
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="@+id/guideline4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            />

        <EditText
            android:id="@+id/input_checkPwd"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="@+id/guideline4"
            app:layout_constraintLeft_toRightOf="@+id/checkPwd" />

        <TextView
            android:id="@+id/pwdHint"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="密码提示："
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintBottom_toBottomOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <TextView
            android:id="@+id/output_pwdHint"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toBottomOf="@+id/guideline5"
            app:layout_constraintLeft_toRightOf="@+id/pwdHint" />

        <Button
            android:id="@+id/password_btn"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_shape"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="60dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="120dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="180dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="240dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40875912" />


    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
