<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.cloud_search.FragmentCloudSearch">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tianditu.android.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints">
                <EditText
                    android:id="@+id/loc_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="请输入查询地点"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/botm_rectangle"
                    app:layout_constraintEnd_toStartOf="@+id/loc_search"/>
                <ImageView
                    android:id="@+id/loc_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    app:layout_constraintStart_toEndOf="@+id/first"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/cloud_search"/>

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_alignBottom="@+id/map"
                android:id="@+id/map_change"
                android:clickable="true"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/botm_rectangle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintVertical_bias="0.17">
                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/map_change"
                    android:layout_marginTop="7dp"
                    android:clickable="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图层切换"
                    android:textSize="9sp"
                    android:clickable="false" />
            </LinearLayout>
            <LinearLayout
                android:layout_alignBottom="@+id/map"
                android:id="@+id/range_search"
                android:clickable="true"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/botm_rectangle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintVertical_bias="0.32">
                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/range_search"
                    android:layout_marginTop="7dp"
                    android:clickable="false" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="范围查询"
                    android:textSize="9sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_alignBottom="@+id/map"
                android:id="@+id/result"
                android:clickable="true"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/botm_rectangle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintVertical_bias="0.47">
                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/result"
                    android:layout_marginTop="7dp"
                    android:clickable="false" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询结果"
                    android:textSize="9sp"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_alignBottom="@+id/map"
                android:id="@+id/my_loc"
                android:clickable="true"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/botm_rectangle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintVertical_bias="0.96">
            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:src="@drawable/my_loc"
                android:layout_marginTop="7dp"
                android:clickable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的位置"
                android:textSize="9sp"
                android:clickable="false" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

</RelativeLayout>